<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests">
    <listeners>
        <listener class-name="Academy.Listeners"/>
    </listeners>
    <test name="Validate User Login">
        <classes>
            <class name="Academy.HomePage">
            <methods><include name="basePageNevigation"/>
                <include name="loginPageTest"/>
            </methods>
        </class>
        </classes>
    </test>
    <test name="Validate Title">
        <classes>
            <class name="Academy.ValidateTitle"/>
        </classes>
    </test>
    <test name="Validate Navigation Bar">
        <classes>
            <class name="Academy.ValidateNavigationBar">
                <methods><include name="validateNavBar"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>